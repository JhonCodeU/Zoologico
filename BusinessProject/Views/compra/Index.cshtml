            @Html.DisplayFor(modelItem => item.precioTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadPersonas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.planTuristico.nombrePlan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.codigoCompra }) |
